        build('()').tryFinish()
        assert.eq(1, errors.count())
        assert.deepEq([{
            type: 'NoWrappedExpr',
            pos: POS,
        }], errors.deliver())

        build('(1,) + 1').tryFinish()
        assert.eq(1, errors.count())
        assert.deepEq([{
            type: 'ExcessiveWrappedExpr',
            pos: POS,
        }], errors.deliver())

        build('(,1) + 1').tryFinish()
        assert.eq(2, errors.count())
        assert.deepEq([{
            type: 'ArrElementOmitted',
            pos: POS,
        }, {
            type: 'ExcessiveWrappedExpr',
            pos: POS,
        }], errors.deliver())

    if true
