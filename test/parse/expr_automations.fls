        assert.deepEq({
          pos: POS,
          name: 'a',
        }, tknzForOneExpr('(a)'))

        assert.deepEq({
          pos: POS,
          op: '&&',
          lhs: {
            pos: POS,
            op: '!',
            rhs: {
              pos: POS,
              op: '||',
              lhs: {
                pos: POS,
                name: 'm',
              },
              rhs: {
                pos: POS,
                name: 'n',
              },
            },
          },
          rhs: {
            pos: POS,
            name: 'p',
          },
        }, tknzForOneExpr('!(m || n) && p'))

        assert.deepEq({
          pos: POS,
          op: '||',
          lhs: {
            pos: POS,
            op: '!',
            rhs: {
              pos: POS,
              name: 'm',
            },
          },
          rhs: {
            pos: POS,
            op: '&&',
            lhs: {
              pos: POS,
              name: 'n',
            },
            rhs: {
